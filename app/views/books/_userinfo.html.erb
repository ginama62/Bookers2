
<h2>User info</h2>

<table class="table">

  <tr>
    <th><%= image_tag user.get_profile_image(100,100) %></th>
  </tr>

  <tr>
    <th>name <%= user.name %></th>
  </tr>

  <tr>
    <th>introduction <%= user.introduction %></th>
  </tr>

  </table>

  <div class='row'>
  <a class="btn btn-outline-secondary btn-block edit_user_path">
    <i class="fas fa-user-cog"></i>
</a></div>

<h2>New book</h2>

<%= form_with model: book, url:'/books' do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <div class="form-group">
  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
  </div>

<% end %>
