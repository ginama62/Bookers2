
<h2>User info</h2>

<table class="table">

  <tr>
    <th><%= image_tag user.get_profile_image(100,100) %></th>
  </tr>

  <tr>
    <th>name</th>
    <th> <%= user.name %> </th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>

  </table>

  <div class='row'>
　　<%=link_to edit_user_path(user.id),class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

<h2>New book</h2>

<%= form_with model: book, url:'/books' do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book',class:"btn btn-success" %>

  <!--<div class="form-group">-->
  <!--<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />-->
  <!--</div>-->

<% end %>
