<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id) do |f| %>
  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <p>introduction</p>
  <%= f.text_area :body %>
  <%= f.submit "Update User" ,class:"btn btn-secondary" ,method: :update %>
<% end %>

    </div>
  </div>
</div>